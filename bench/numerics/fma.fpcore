; -*- mode: scheme -*-

(FPCore (t)
 :name "fma_test1"
 :herbie-samplers ([t (uniform 0.9 1.1)])
 :target
 (let ([x (+ 1 (* t 2e-16))]
       [z (- -1 (* 2 (* t 2e-16)))])
   (fma x x z))
 (let ([x (+ 1 (* t 2e-16))]
       [z (- -1 (* 2 (* t 2e-16)))])
   (+ (* x x) z)))

(FPCore (t)
 :name "fma_test2"
 :herbie-samplers ([t (uniform 1.9 2.1)])
 :target
 (let ([x 1.7e308])
   (fma x t (- x)))
 (let ([x 1.7e308])
   (- (* x t) x)))
